<div class="container">
  <div class="row">
    <% @devices.each do |device| %>
      <div class="col-xs-12 col-sm-4 col-md-6">
        <% if device.photo? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path device.photo, crop: :fit %>');">
            <div class="card-description">
              <h2><%= link_to device.name, device_path(device) %></h2>
            </div>
          </div>
        <% else %>
          <div class="card">
            <div class="card-description">
              <h2><%= link_to device.name, device_path(device) %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
