<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @device.photo, crop: :fill %>');">
  <div class="banner-content">
    <h1><%= @device.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div>
      <h4>Information on Device</h4>
      <ul>
        <li><%= @device.type_of_device %></li>
        <li><%= @device.condition_of_device %></li>
        <li><%= @device.age_of_device %></li>
        <li><%= @device.description %></li>
      </ul>
    </div>
    <div class="card-price">
      <h4>Â£<%= @device.price_per_week %> per week</h4>
      <h5>Dates</h5>
      <form action="/" method="get">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
          <label for="start">Start Date: </label>
          <input type="date" name="startdate" value="<%= Date.today %>">
        </div>
        <div class="form-group">
          <label for="end">End Date: </label>
          <input type="date" name="enddate" value="<%= Date.tomorrow %>">
        </div>
        <input type="submit" name="Search">
      </form>
    </div>
  </div>
</div>