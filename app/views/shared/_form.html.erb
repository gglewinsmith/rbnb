<div>
  <%= form_for(@device) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :condition_of_device %>
          <%= f.text_field :condition_of_device, class: 'form-control', name: "test" %>
        </div>

        <%= f.submit "Search", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
