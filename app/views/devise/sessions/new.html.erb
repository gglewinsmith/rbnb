<div class="devise-form-box">
    <div class="row">
      <h2 class="devise-h2">Sign In</h2>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label_html: { class: "form_text" },
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label_html: { class: "form_text" },
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label_html: { class: "form_text" } if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", :class => "btn-medium new_center_button"  %>
        </div>
      <% end %>
        <br>
      <div class="devise-footer-flex">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>


