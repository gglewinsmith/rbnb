<div class="container" style="background-image: linear-gradient(-100deg, #141e30, #243b55);" id="homepage-banner">
  <div class="banner-content">
    <h1>search for a device</h1>
    <%= render 'shared/form', device: @device %>
  </div>
</div>

<div class="wrapper">
  <div class="heading">
    <h1><%= pluralize @devices.size, "result" %></h1>
  </div>
  <hr>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="row">
          <% @devices.each do |device| %>
            <div class="col-sm-6">
              <%= render 'shared/card', device: device %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6">
        <div
          id="map"
          data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
    </div>
  </div>
</div>



