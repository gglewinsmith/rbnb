<div class='form_for flex_box'>
  <div class="row form-group search_form flex_box">
    <%= form_tag devices_path, class: "search_form", method: :get, remote: true do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "What type of device do you need"%>
        <%= submit_tag "Search", class: 'btn btn-danger', id: 'search_button_id' %>
    <% end %>
  </div>
</div>

