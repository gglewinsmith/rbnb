<div class="dashboard">
  <div class="dashboard-name">
    <h3><%= Device.find(device.device_id).name %></h3>
  </div>
  <div class="dashboard-body">
    <p><%= Device.find(device.device_id).description %></p>
  </div>
  <div class="dashboard-body">
    <p><%= device.start_of_renting %></p>
  </div>
  <div class="dashboard-body">
    <p><%= device.end_of_renting %></p>
  </div>
  <div class="dashboard-link">
    <%= link_to 'More information on this device', device_path(device) %>
  </div>
</div>
