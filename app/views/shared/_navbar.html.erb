<div class="navbar-wagon">
  <div class="navbar-wagon-left hidden-xs hidden-sm">
    <%= link_to 'Borrow a Device', devices_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'Lend a Device', new_device_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to 'My Dashboard', dashboard_path, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to 'Borrow a Device', devices_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to 'Lend a Device', new_device_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to 'My Dashboard', dashboard_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
  <%= link_to 'devici', root_path, class: "logo_styling" %>
  <div class="navbar-wagon-right">
    <% if user_signed_in? %>
      <div class='sign-out'>
        <div class="navbar-wagon-link">
          <%= current_user.email %>
        </div>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
      </div>
    <% else %>
      <div class='sign-up'>
        <%= link_to 'Sign Up', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
      </div>
      <div class="sign-in">
        <%= link_to 'Sign In', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      </div>
    <% end %>
  </div>
</div>
